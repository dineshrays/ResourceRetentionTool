<script>

    function myfunction(id) {
    
        $.ajax(
            {
                url: '/Manager/SearchEmpSkill/getNotifications',
                type: 'POST',
                datatype: 'application/json',
                contentType: 'application/json',
                data: JSON.stringify({ userid: id }),
                success: function (result) {
                    //  alert(result);
                    $("#notifi").empty();
                    var markup = "<p class='red'>You have @Session["Notifict"]  Notification</p>";

                    $("#notifi").append(markup);
                    $.each(result, function (i, notif) {
                        //alert('insuccess') Name
                        if (i < 2) {
                          
                            var markup = "<a class='dropdown-item media' style='background-color:#b3bdce' href='#' onclick='viewmore(" + notif.Id + "," + notif.type + ")'><i class='fa fa-check'></i><h6>" + notif.Message + "</h6></a><p class='dropdown-item media' style='background-color:#b3bdce'>" + notif.subMessage + "</p>";
                           
                            $("#notifi").append(markup);
                        }
                        else if (i == 2) {
                            var markup = "<a class='dropdown-item media' style='background-color:#b3bdce' href='@Url.Action("Notification", "SearchEmpSkill", new { userid = Session["uid"]})'>View More</a>";
                       $("#notifi").append(markup);
                        }
                        else if (i > 2) {
                          
                        }

                       
                    });
                },
                error: function () { alert("Something Gone Wrong") },
            });
    }
    function viewmore(id,type) {
      
           var newUrl= '/Manager/SearchEmpSkill/Index';
           $.ajax(
            {
                   url: '/Manager/SearchEmpSkill/Notif',
                type: 'POST',
                datatype: 'application/json',
                   contentType: 'application/json',
                   data: JSON.stringify({ notificationid: id, type: type }),
                   success: function (result) {
                       window.location.href = newUrl;

                },
                error: function () { alert("Something Gone Wrong") },
            });
      
    }
</script>