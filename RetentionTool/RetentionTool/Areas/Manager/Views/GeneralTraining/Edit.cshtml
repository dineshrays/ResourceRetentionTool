    $(".add-emp").click(function () {

        var empname = $("#searchemp").val();
        var empid = $("#searchid").val();
        var name = $("#searchempname").val();
        var markup = "<tr><td><input type='checkbox' checked  name='chck'></td><td>" + empname + "</td><td style='display: none'>" + empid + "</td><td>" + name + "</td></tr>";
        $("table tbody").append(markup);
        $("#searchemp").val('');
        $("#searchid").val('');
        $("#searchempname").val('');
    });

    $(".del-emp").click(

        function () {

            $("table tbody").find('input[name="chck"]').each(function () {
                if ($(this).is(":checked")) {
                    $(this).parents("tr").remove();
                }
            });
        });



</script>
