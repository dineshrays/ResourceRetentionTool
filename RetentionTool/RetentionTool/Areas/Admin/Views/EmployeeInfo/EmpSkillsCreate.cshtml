<script>
    $(".add-emp").click(function () {

        var skillname = $("#searchskill").val();


        var skillid = $("#searchid").val();

        var Years = $("#Years").val();
        var Months = $("#Months").val();
        var Status = $("#Status").val();
        var markup = "<tr><td><input type='checkbox'  name='chck'></td><td>" +
            skillname + "</td><td style='display: none'>" + skillid + "</td><td>" +
            Years + "</td><td>" +
            Months + "</td><td>" +
            Status + "</td></tr>";
        $("table tbody").append(markup);
        $("#searchskill").val('');
        $("#searchid").val('');
        $("#Years").val('');
        $("#Months").val('');
        $("#Status").val('');
    });

    $(".del-emp").click(function () {

        $("table tbody").find('input[name="chck"]').each(function () {
            if ($(this).is(":checked")) {
                $(this).parents("tr").remove();
            }
        });
    });

</script>
