@model IEnumerable<RetentionTool.Models.SkillsViewModel>
@{
    ViewBag.Title = "Secondary Skills";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutMain.cshtml";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-6">
        <div class="page-header float-left">
            <div class="page-title">
                <h1> Secondary Skills</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right" style="background-color:white">
                    <li><a href="@Url.Action("Index", "AdminDashboard")">Dashboard /</a></li>
                    <li><a href="@Url.Action("Index", "Skills")">Secondary Skill /</a></li>
                    <li class="active"> Index </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="card">

    @*<div class="card-header">

        <h2>Secondary Skills</h2>
    </div>*@



    <div class="card-body">
        @Html.ActionLink("Create New", "Create", "Skills", null, new { @class = "btn btn-outline-primary" })


    </div>
</div>
@*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@

@if(Model.Count()>0)
{
    <div class="container" style="width:100%;margin-top:2%" >
        <table class="table table-striped" style="width:100%">
            <tr>
                <th>Id</th>
                <th>CommonField Name</th>
                <th>Skills Name</th>
                <th>Actions</th>
            </tr>

            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.id</td>
                        <td>@obj.CommonFieldName</td>
                        <td>@obj.SkillName</td>
                            
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id=obj.id}, new { @class = "ti-pencil" })
                            @Html.ActionLink(" ","Delete",new { id=obj.id}, new { @class = "ti-trash" })
                        </td>
                        
                    </tr>

                }
            </tbody>
        </table>
    </div>
}