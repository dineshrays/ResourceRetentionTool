        }

        if ($("#managerid").val().length > 0) {
            $("#errmanagerid").hide();
        }
        else{

            $("#errmanagerid").show();
        }
      //  alert($("#moduleid").val());
        if ($("#moduleid").val() > 0) {
            $("#errmoduleid").hide();
        }
        else  {

            $("#errmoduleid").show();
        }

        if ($("#trainerid").val().length > 0) {
            $("#errtrainerid").hide();
        }
        else {

            $("#errtrainerid").show();
        }
    }
</script>

