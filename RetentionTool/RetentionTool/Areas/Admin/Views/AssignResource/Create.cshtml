            $("#errsearchproject").hide();
        }
    });
    ////managerid  errmanagerid
    $("#managerid").change(
        function () {
        if ($("#managerid").val() > 0) {
            $("#errmanagerid").hide();
        }
        else {
            $("#errmanagerid").show();
        }
       
    });
    // moduleid,errmoduleid
    $("#moduleid").change(function () {
        if ($("#moduleid").val() > 0) {
                $("#errmoduleid").hide();
            }
            else {

                $("#errmoduleid").show();
            }
       
    });
    //trainerid,errtrainerid
    $("#trainerid").change(function () {
            if ($("#trainerid").val()> 0) {
                $("#errtrainerid").hide();
            }
            else  {

                $("#errtrainerid").show();
            }
     
    });

    function validate() {
        if ($("#date").val().length > 0) {
            $("#errdate").hide();
        }
        else  {

            $("#errdate").show();
        }
        if ($("#searchproject").val().length > 0) {
            $("#errsearchproject").hide();
        }
        else  {

