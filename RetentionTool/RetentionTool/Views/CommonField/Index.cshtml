@model IEnumerable<RetentionTool.Models.CommonFieldViewModel>

@{
    ViewBag.Title = "CommonField Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



    <h2>CommonField Index</h2>
    <div class="card-body">

        @Html.ActionLink("Create New", "Create", "CommonField", null, new { @class = "btn btn-outline-primary" })
       
        </div>
        <div class="container" style="width:100%;margin-top:2%">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>*@
                    <th>
                        @Html.Label("Actions")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>*@
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "ti-pencil" }) |

                            @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "ti-trash" })
                        </td>
                    </tr>
                }

            </table>
        </div>
