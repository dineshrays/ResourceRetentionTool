@model RetentionTool.ViewModel.RolesViewModel
@{
    ViewBag.Title = "Edit Roles";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@using (Html.BeginForm())
{
    <div class="card">
        <div class="card-header">
            <h2>Edit Roles</h2>

        </div>
        <div class="card-body card-block">
            <div class="row form-group">

                <div class="col col-md-3">

                    @Html.LabelFor(model=>model.role.Name,new  {@class="form-control-label" })
                </div>
                <div class="col-12 col-md-9">
                    @Html.HiddenFor(model=>model.role.Id)
                    @Html.HiddenFor(model=>model.role.IsActive)
                    @Html.HiddenFor(model=>model.role.EntryDate)
                    @Html.TextBoxFor(model => model.role.Name,new  {@class="form-control",style="width:30%" })
                </div>
              
            </div>
            <div class="row form-group">
                <div class="col col-md-3">

                </div>
                <div class="col-12 col-md-9">
                    <input type="submit" value="Edit" class="btn btn-success"/>
@Html.ActionLink("Back To List","Index","Roles",null,new { @class="btn btn-outline-link"})

                </div>
            </div>

        </div>

    </div>

}


