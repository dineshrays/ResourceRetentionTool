@model IEnumerable< RetentionTool.ViewModel.RolesViewModel>
    @{
        ViewBag.Title = "Index Roles";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }
@using (Html.BeginForm())
{


<div class="card-header">

    <h2>Index Roles</h2>
</div>

<div class="card-body">

    @Html.ActionLink("Create New", "Create", "Roles", null, new { @class = "btn btn-outline-primary" })

</div>
<div class="container" style="width:100%;margin-top:2%">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
            <th>
                @Html.Label("Actions")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.rolevm)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>*@
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "ti-pencil" }) |

                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "ti-trash" })
                </td>
            </tr>
        }

    </table>
</div>
}