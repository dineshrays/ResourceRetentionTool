@model RetentionTool.ViewModel.ProjectWorkedViewModel
@{
    ViewBag.Title = "Edit Critical Resource";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="Stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.10/themes/redmond/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<div class="card">
    <div class="card-header">
        <h2>Edit Critical Resource</h2>

    </div>
    <div class="card-body card-block">
        <div class="row form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.projects.ProjectsDetail.Name, new { @class = "form-control-label" })
            </div>
            <div class="col-12 col-md-9">
                @Html.HiddenFor(model => model.projects.Project_Id, new { @id="projectId" })
                @Html.DisplayFor(model => model.projectname, new { @class = "form-control-label", @id = "projectname", style = "width:30%" })
            </div>
        </div>
        
             <br />
             <div>

                 <table class="table table-striped" id="tbl" style="width:50%">
                     <tr>
                         <th>Select</th>

                         <th>Employee Name</th>
                         <th>Employee Code</th>
                         <th style="display:none;width:0%">Employee Id</th>
                         <th>Designation</th>
                         <th>Responsibility</th>
                         <th>IsTrainer</th>

                     </tr>
                     @foreach (var item in Model.projectvm)
                     {
                         <tr>
                             <td>
                                 @{ bool IsCriticalRes = false;}
                                 @foreach (var id in ViewBag.CriticalRes)
                                 {
                                     if (id == item.PersonalInfo1.Id)
                                     {
                                         IsCriticalRes = true;
                                     }
                                 }
                                 @if (IsCriticalRes == true)
                                 {
                                     <input type="checkbox" class="chck" checked onclick="showcheckbox();" />
                                 }
                                 else
                                 {
                                     <input type="checkbox" class="chck" onclick="showcheckbox();" />
                                 }

                             </td>
                             <td>@item.PersonalInfo1.Name</td>
                             <td>@item.PersonalInfo1.EmpCode</td>
                             <td style="display:none;width:0%">@item.PersonalInfo1.Id</td>
                             <td>@item.Designation</td>
                             <td>@item.Responsibilities</td>
                             <td>
                                 @{ bool isTrainer = false;}

                                 @foreach (var id in ViewBag.TrainerDet)
                                 {
                                     if (id == item.PersonalInfo1.Id)
                                     {
                                         isTrainer = true;
                                     }
                                 }
                                 @if (isTrainer == true)

                                 {
                                     <input type="checkbox" class="chcktrainer" checked />
                                 }
                                 else
                                 {
                                     <input type="checkbox" class="chcktrainer" />
                                 }

                             </td>
                         </tr>
                     }
                 </table>
                 <br />
                 <div style="display:none" id="accountinfo">
                     <div class="row form-group">
                         <input class="form-control" style="width:30%" id="reporting" placeholder="reporting" />
                         <input id="Information" placeholder="Information" />
                         <input type="button" value="Add" class="add-accountability" />
                     </div>

                     <table class="table table-striped" id="table-accountability" style="width:50%">
                         <tr>
                             <th>Select</th>
                             <th>reporting</th>
                             <th>Information</th>
                         </tr>

                         @foreach(var i in)

                     </table>
                     <br />
                     <button type="button" class="del-accountability">Delete</button>
                 </div>
                 <br />

             </div>

        <div class="row form-group">
            <div class="col col-md-3">


            </div>
            <div class="col-12 col-md-9">

                <input type="submit" value="Save" id="btnSave" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", "CriticalResource", null, new { @class = "btn btn-outline-link" })

            </div>


        </div>

    </div>
</div>
<script>

    function showcheckbox() {
        //$('#tbl input[type="checkbox"]').click(function () {
        if ($('#tbl input[type = "checkbox"]').find('input.chck').is(':checked')) {
                //.prop('checked', true);
                $(this).find('input.chcktrainer').prop('checked', true);
            }
            else {
                $(this).find('input.chcktrainer').prop('checked', false);
            }
        //});
        
     
    }
      $("#btnSave").click(function () {


          var criticallist = [];
          var trainerlist = [];
          var projectId = $("#projectId").val();
          $("table tr:not(:first)").each(function () {
              //var tdlist = $(this).find("td");
              //var Item = { Name: $(tdlist[1]).html(), Id: $(tdlist[2]).html() };
              //itemlist.push(Item);

              if ($(this).find('input.chck').is(':checked')) {
                          //iseligible = true;
                          //  var p_id = $(tdlist[0]).html();
                  var tdlist = $(this).find("td");
                  var Item = { PersonalInfo_Id: $(tdlist[3]).html(), Project_Id: projectId };
                  criticallist.push(Item);
              }
              if ($(this).find('input.chcktrainer').is(':checked')) {
                  //iseligible = true;
                  //  var p_id = $(tdlist[0]).html();
                  var tdlist = $(this).find("td");
                  var Item = { PersonalInfo_Id: $(tdlist[3]).html() };
                  trainerlist.push(Item);
              }
              
          })
       

              
         var newUrl= '@Url.Action("Index", "CriticalResource")';
                $.ajax({
                    url: '@Url.Action("Edit", "CriticalResource")', //
                    dataType: "json",
                    data: JSON.stringify({ projectId: projectId, criticallist: criticallist, trainerlist: trainerlist }),
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        window.location.href = newUrl;
                    },
                    error: function (xhr) {
                        alert("error");
                    }
        });
        });


</script>
